<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.Trekkit_Java.DAO.AuthCodeDao"> 

	<delete id="deleteEmail">
    	DELETE FROM authcode WHERE email = #{cleanEmail}
    </delete>
    
    <insert id="insertAuthCode">
        INSERT INTO authcode (email, code)
        VALUES (#{cleanEmail}, #{authCode})
    </insert>
    
    <delete id="deleteExpiredCodes">
    	DELETE FROM authcode WHERE created &lt; NOW() - INTERVAL 10 MINUTE
    </delete>
    
    <select id="verifyCode" resultType="int">
        SELECT COUNT(*) FROM authcode 
        WHERE email = #{cleanEmail} AND code = #{authcode} AND created >= NOW() - INTERVAL 10 MINUTE
    </select>
    
</mapper>