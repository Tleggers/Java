<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"file:///C:\Users\805-06\Desktop\TP\5\Java\Trekkit_Java\src\main\resources\dtd\mybatis-3-mapper.dtd">

<mapper namespace="com.Trekkit_Java.DAO.CommentDAO">

    <!-- 댓글 ResultMap -->
    <resultMap id="CommentResultMap" type="com.Trekkit_Java.DTO.CommentDTO">
        <id property="id" column="id"/>
        <result property="postId" column="post_id"/>
        <result property="userId" column="user_id"/>
        <result property="nickname" column="nickname"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 특정 게시글의 댓글 목록 조회 -->
    <select id="selectCommentsByPostId" resultMap="CommentResultMap">
        SELECT 
            id,
            post_id,
            user_id,
            nickname,
            content,
            created_at,
            updated_at
        FROM comments
        WHERE post_id = #{postId}
        ORDER BY created_at ASC
    </select>

    <!-- 댓글 상세 조회 -->
    <select id="selectCommentById" resultMap="CommentResultMap">
        SELECT 
            id,
            post_id,
            user_id,
            nickname,
            content,
            created_at,
            updated_at
        FROM comments
        WHERE id = #{id}
    </select>

    <!-- 새 댓글 삽입 -->
    <insert id="insertComment" parameterType="com.Trekkit_Java.DTO.CommentDTO" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comments (
            post_id,
            user_id,
            nickname,
            content,
            created_at
        ) VALUES (
            #{postId},
            #{userId},
            #{nickname},
            #{content},
            NOW()
        )
    </insert>

    <!-- 댓글 수정 -->
    <update id="updateComment">
        UPDATE comments 
        SET 
            content = #{content},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment">
        DELETE FROM comments WHERE id = #{id}
    </delete>

    <!-- 특정 게시글의 댓글 수 조회 -->
    <select id="selectCommentCountByPostId" resultType="int">
        SELECT COUNT(*)
        FROM comments
        WHERE post_id = #{postId}
    </select>

    <!-- 특정 사용자의 댓글 목록 조회 -->
    <select id="selectCommentsByUserId" resultMap="CommentResultMap">
        SELECT 
            id,
            post_id,
            user_id,
            nickname,
            content,
            created_at,
            updated_at
        FROM comments
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

</mapper>