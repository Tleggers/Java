<mapper namespace="com.Trekkit_Java.DAO.MountainDAO">

    <insert id="insertMountain" parameterType="com.Trekkit_Java.Model.Mountain">
        INSERT INTO mountains
        (mntilistno, mntiname, mntitop, mntisname, mntiadd, mntihigh, mntisummary, mntidetails)
        VALUES
        (#{mntiListNo}, #{name}, #{topReason}, #{subName}, #{location}, #{height}, #{summary}, #{details})
    </insert>

